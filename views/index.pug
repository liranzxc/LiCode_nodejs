extends layout
block content
  
  form(action='/upload' method="POST" enctype="multipart/form-data")
      .row
        .col.s12
          if msg ==1
            .success
              | Photo uploaded successfully
          else if msg == 4
            .success
              | Photo Deleted from database 
          else if msg == 5
            .error
              | Error to delete from database
          else if msg == 2
            .error
              | File size too large
          else if msg == 3
            .error
              | Invalid file type. Only JPG, PNG or GIF file are allowed.      
      .row
        .col.s12 
          .file-field.input-field
            .btn.grey
              span File
              input(type='file' name="photo" required)
            .file-path-wrapper
              input.file-path.validate(type='text' )
      .row
       .input-field.col.s12
        input#caption.validate(type='text' name="caption")
        label(for='caption') Caption 
      
      .row
        .col.s12 
          button.btn.waves-effect.waves-light(type='submit', name='action')
            | Upload
            i.material-icons.right send

  .row
        .col.s12

         h4 Status Gallery

         if photolist.length
          | <div class="row">

          each pic, index in photolist
            div#carddiv(class="card col s3")
              div#contact(class="card-content")
                <span class="card-title activator grey-text text-darken-4">פרטים נוספים<i class="material-icons right">more_vert</i></span>
                <img src =#{pic['path']} alt="image" class="activator responsive-img" style="height: 350px;">
              <div class="card-reveal #b2ebf2 cyan lighten-4">
              <span class="card-title grey-text text-darken-4">פרטים נוספים<i class="material-icons right">close</i></span>
              <p class="card-content center-align"><h5>#{pic['caption']}</h5></p>
              <div class="container center-align">
              form(action="/deletephoto", method="post")
                  button.btn.waves-effect.waves-light(type='submit' value=pic['file_image']  name='file_image' style="position:relative;margin-top:75%;left:50%;") Delete
              </div>
              </div>
            if (((index+1) % 4) == 0 )
              | </div><div class="row">

          else
            .row
              .col.s12
                .caption No photos uploaded yet.
